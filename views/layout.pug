doctype html
html
  head
    title LAN Topology App
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='/bower_components/vis/dist/vis.min.css')
    link(rel='stylesheet' href='/css/style.min.css')
    meta(name="viewport" content="width=device-width, initial-scale=1")
  body
    nav.navbar.navbar-inverse(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-collapse')
            span.sr-only Rozwiń nawigację
            span.icon-bar
            span.icon-bar
            span.icon-bar
        #navbar-collapse.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') Home
            if user
              li
                a(href='/topology/list') Lista skanów
              li
                a(href='/topology/add') Dodaj skan
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Wyloguj
            else
              li
                a(href='/users/register') Rejestracja
              li
                a(href='/users/login') Logowanie
    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          .alert.alert-danger #{error.msg}
      block content
      hr
      footer
        p.text-center Copyright &copy; 2017 Jakub Mandra
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/vis/dist/vis.min.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/js/main.js')
